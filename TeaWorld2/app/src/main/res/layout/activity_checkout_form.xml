<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:backgroundTint="@color/secondary"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".checkout_form">

    <TextView
        android:id="@+id/textView"
        style="@style/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/primary"
        android:elevation="15dp"
        android:padding="16dp"
        android:text="CHECKOUT FORM" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:elevation="0dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textColorHint="@color/fonts"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="0dp"
        android:ems="10"
        android:hint="Shipping Address"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textColorHint="@color/fonts"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/cardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:elevation="0dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textColorHint="@color/fonts"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/cardNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:elevation="0dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textColorHint="@color/fonts"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/textView3"
            style="@style/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="TOTAL"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            style="@style/headingText"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_bold"
            android:gravity="end"
            android:padding="10dp"
            android:text="$10"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/placeOrder"
        style="@style/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/fonts"
        android:backgroundTint="@color/fonts"
        android:elevation="10dp"
        android:fontFamily="@font/rubik"
        android:text="PLACE YOUR ORDER"
        android:textColor="@color/fonts"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/back"
        style="@style/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/fonts"
        android:backgroundTint="@color/fonts"
        android:elevation="10dp"
        android:fontFamily="@font/rubik"
        android:text="BACK TO HOME"
        android:textColor="@color/fonts"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="28dp" />


</LinearLayout>